<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- ===================== -->
  <!-- SIMPLE PARALLEL GRIPPER -->
  <!-- ===================== -->
  <xacro:macro name="simple_gripper" params="parent_link">

    <!-- Bigger parameters -->
    <xacro:property name="finger_length" value="0.105"/>
    <xacro:property name="finger_width"  value="0.015"/>
    <xacro:property name="finger_height" value="0.03"/>
    <xacro:property name="finger_offset" value="0.06"/>
    <xacro:property name="finger_travel" value="0.05"/>

    <!-- ===================== -->
    <!-- GRIPPER BASE -->
    <!-- ===================== -->
    <link name="gripper_base_link"/>

    <joint name="tool0_to_gripper" type="fixed">
      <parent link="${parent_link}"/>
      <child link="gripper_base_link"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <!-- ===================== -->
    <!-- RIGHT FINGER (MASTER) -->
    <!-- ===================== -->
    <link name="right_finger">
      <visual>
        <geometry>
          <box size="${finger_length} ${finger_width} ${finger_height}"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <box size="${finger_length} ${finger_width} ${finger_height}"/>
        </geometry>
      </collision>
      <inertia
        ixx="1e-5" ixy="0.0" ixz="0.0"
        iyy="1e-5" iyz="0.0"
        izz="1e-5"/>
    </inertial>
      </link>

    <joint name="right_finger_joint" type="prismatic">
      <parent link="gripper_base_link"/>
      <child link="right_finger"/>
      <origin xyz="0 -${finger_offset} 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="0.0" upper="${finger_travel}" effort="20" velocity="0.1"/>
    </joint>

    <!-- ===================== -->
    <!-- LEFT FINGER (MIMIC) -->
    <!-- ===================== -->
    <link name="left_finger">
      <visual>
        <geometry>
          <box size="${finger_length} ${finger_width} ${finger_height}"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <box size="${finger_length} ${finger_width} ${finger_height}"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0"/>
        <mass value="0.05"/>
        <inertia
          ixx="1e-5" ixy="0.0" ixz="0.0"
          iyy="1e-5" iyz="0.0"
          izz="1e-5"/>
      </inertial>
    </link>

    <joint name="left_finger_joint" type="prismatic">
      <parent link="gripper_base_link"/>
      <child link="left_finger"/>
      <origin xyz="0 ${finger_offset} 0"/>
      <axis xyz="0 -1 0"/>
      <limit lower="0.0" upper="${finger_travel}" effort="20" velocity="0.1"/>

      <!-- Proper mimic -->
      <mimic joint="right_finger_joint" multiplier="1.0" offset="0.0"/>
    </joint>

  </xacro:macro>

</robot>
