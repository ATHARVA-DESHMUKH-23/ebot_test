<?xml version="1.0"?>
<robot name="test_arm">

  <!-- ===================== -->
  <!-- BASE -->
  <!-- ===================== -->
  <link name="base_link"/>

  <!-- ===================== -->
  <!-- LINK 1 -->
  <!-- ===================== -->
  <link name="link_1">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.03"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.03"/>
      </geometry>
    </collision>
  </link>

  <joint name="joint_1" type="revolute">
    <parent link="base_link"/>
    <child link="link_1"/>
    <origin xyz="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="10" velocity="1.0"/>
  </joint>

  <!-- ===================== -->
  <!-- LINK 2 -->
  <!-- ===================== -->
  <link name="link_2">
    <visual>
      <geometry>
        <cylinder length="0.25" radius="0.03"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.25" radius="0.03"/>
      </geometry>
    </collision>
  </link>

  <joint name="joint_2" type="revolute">
    <parent link="link_1"/>
    <child link="link_2"/>
    <origin xyz="0 0 0.1"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>

  <!-- ===================== -->
  <!-- LINK 3 -->
  <!-- ===================== -->
  <link name="link_3">
    <visual>
      <geometry>
        <cylinder length="0.2" radius="0.025"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.2" radius="0.025"/>
      </geometry>
    </collision>
  </link>

  <joint name="joint_3" type="revolute">
    <parent link="link_2"/>
    <child link="link_3"/>
    <origin xyz="0 0 0.25"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>

  <!-- ===================== -->
  <!-- END EFFECTOR -->
  <!-- ===================== -->
  <link name="ee_link"/>

  <joint name="ee_fixed" type="fixed">
    <parent link="link_3"/>
    <child link="ee_link"/>
    <origin xyz="0 0 0.2"/>
  </joint>

</robot>
